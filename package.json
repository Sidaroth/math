{
    "name": "@sidaroth/math",
    "version": "0.3.1",
    "description": "A lightweight, high-performance math library for rendering, simulation, and physics applications.",
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/"
    },
    "author": "Christian Holt <sidaroth>",
    "license": "MIT",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "module": "dist/index.js",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "format": "prettier --write \"src/**/*.ts\"",
        "build": "tsup src/index.ts --format esm,cjs --dts --clean",
        "dev": "tsup src/index.ts --watch --format esm --dts",
        "test": "vitest run",
        "lint": "oxlint src",
        "test:watch": "vitest watch",
        "check": "tsc --noEmit",
        "bump": "lerna version",
        "release": "lerna publish from-package --yes"
    },
    "devDependencies": {
        "@types/node": "24.10.0",
        "@vitest/coverage-v8": "^4.0.7",
        "lerna": "9.0.0",
        "oxlint": "1.26.0",
        "prettier": "^3.6.2",
        "tsup": "8.5.0",
        "typescript": "5.9.3",
        "vitest": "4.0.7"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/sidaroth/math.git"
    },
    "engines": {
        "node": ">=18"
    }
}
