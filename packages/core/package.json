{
    "name": "@sidaroth/core",
    "version": "1.0.0",
    "description": "A lightweight, high-performance core library for rendering, simulation, and physics applications.",
    "author": "Christian Holt <sidaroth>",
    "license": "MIT",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup src/index.ts --format esm,cjs --dts --clean",
        "dev": "tsup src/index.ts --watch --format esm --dts",
        "test": "vitest run",
        "lint": "oxlint src",
        "test:watch": "vitest watch",
        "check": "tsc --noEmit",
        "bench": "vitest bench"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/sidaroth/kit.git",
        "directory": "packages/core"
    },
    "engines": {
        "node": ">=18"
    }
}